@model IEnumerable<QLNhaHang.Models.KhachHang>

@{
    ViewBag.Title = "Khách Hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.DienThoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenDangNhap)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.DienThoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenDangNhap)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
       
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.KhachHangID }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.KhachHangID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.KhachHangID })
        </td>
    </tr>
}

</table>
