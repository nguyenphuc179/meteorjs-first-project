
@{
    ViewBag.Title = "UploadPhotos";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Upload hình</h2>
<h3>Tên sản phẩm: @ViewBag.TenSanPham</h3>

@using (Html.BeginForm("UploadPhotos", "AdminBaiViet1", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
{

    <div class="form-group">

        <div class="col-md-10">
            <input type="file" name="file" id="file" />

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <input type="submit" value="Thêm Ảnh" />
        </div>
    </div>
}

