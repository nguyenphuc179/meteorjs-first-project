 @model QLNhaHang.Models.ThucDon
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Views/Shared/_NhaHangLayout.cshtml";
}
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <ul>
                    <li class="home">
                        <a href="index.html" title="Go to Home Page">Home</a>
                        <span>—›</span>
                    </li>


                    <li><strong>@Model.TenThucDon</strong>
                    <li>

                </ul>
            </div>
        </div>
    </div>
    <section class="main-container col1-layout">
        <div class="main container">
            <div class="col-main">
                <div class="row">
                    <div class="product-view">
                        <div class="product-essential">
                                 @using (Html.BeginForm("Them", "GioHang", FormMethod.Post))
                                 {
                                <div class="product-img-box col-lg-4 col-sm-6 col-md-4 col-xs-12">
                                    <div class="product-image">
                                        <div class="large-image">
                                            <a class="cloud-zoom" id="zoom1" rel="useWrapper: false, adjustY:0, adjustX:20">
                                                <img src="~/Photos/ThucDon/@Model.Hinh" alt="@Model.TenThucDon">
                                            </a>
                                        </div>

                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="product-shop col-lg-5 col-sm-6 col-md-5 col-xs-12">
                                    <div class="product-name">
                                        <h1>@Model.TenThucDon</h1>
                                    </div>

                                    

                                    <div class="price-block">

                                        <div class="price-box">
                                            <p class="special-price"><span id="product-price-48" class="price"> @Model.DonGia VND</span> </p>
                                        </div>

                                    </div>
                                    <div class="short-description">
                                        <p style="font-family: arial;">  @Model.MoTa</p>
                                    </div>
                                    
                                        
                                            @Html.Hidden("ThucDonID", (int)Model.ThucDonID)
                                            <label>Số lượng:</label>
                                            
                                              @Html.TextBox("SoLuong", value: 1)
                                            <input type="image" src="~/images/shopping-cart-orange.png" title="Chọn mua hàng"/>
                                            
                                    <a href="@Model.THANHTOANTRUCTUYEN"><img src="http://www.baokim.vn/developers/uploads/baokim_btn/thanhtoan-l.png" alt="Thanh toán an toàn với Bảo Kim !" border="0" title="Thanh toán trực tuyến an toàn dùng tài khoản Ngân hàng (VietcomBank, TechcomBank, Đông Á, VietinBank, Quân Đội, VIB, SHB,... và thẻ Quốc tế (Visa, Master Card...) qua Cổng thanh toán trực tuyến BảoKim.vn"></a>
                            
                                    </div>
                                 }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


<div class="fb-comments"
     data-href="http://localhost:17450/SanPham/ChiTiet/@Model.ThucDonID" data-width="100%" data-numposts="5">
</div>


