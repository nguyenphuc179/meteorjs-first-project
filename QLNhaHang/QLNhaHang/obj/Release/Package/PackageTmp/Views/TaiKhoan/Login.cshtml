@model QLNhaHang.Models.KhachHang




@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_NhaHangLayout.cshtml";
}

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <ul>
                <li class="home"> <a href="/home" title="Go to Home Page">Home</a><span>—›</span></li>

                <li><strong>Đăng nhập tài khoản</strong></li>

            </ul>
        </div>
    </div>
</div>

<section class="main-container col1-layout">
    <div class="main container">
        <div class="account-login">
            <div class="page-title">
                <h2>Đăng nhập / tạo tài khoản</h2>
            </div>
            <fieldset class="col2-set">
                <legend>Đăng nhập / tạo tài khoản</legend>
                <div class="col-1 new-users">
                    <strong>Khách hàng mới</strong>
                    <div class="content">
                        <p>Bằng cách tạo một tài khoản với cửa hàng của chúng tôi , bạn sẽ có thể thực hiện những quy trình mua hàng nhanh hơn , lưu trữ nhiều địa chỉ gửi hàng , xem và theo dõi đơn đặt hàng của bạn trong tài khoản của bạn và nhiều hơn nữa .</p>
                        <div class="buttons-set">
                            <a href="/TaiKhoan/Register"><button onclick="window.location='register.html';" class="button create-account" type="button"><span>Tạo tài khoản</span></button></a>
                        </div>
                    </div>
                </div>
                <div class="col-2 registered-users">
                    <strong>Đăng nhập</strong>
                    <div class="content">
                        <p>Nếu bạn đã có tài khoản , xin vui lòng đăng nhập </p>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                
                                <hr />
                                @Html.ValidationSummary(true)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.TenDangNhap, new { @class = "control-label col-md-2", @style = "width: 143px"} )<span class="required">*</span>
                                    <div class="col-md-10" style="padding-left: 29px; padding-right:29px">
                                        @Html.TextBoxFor(model => model.TenDangNhap, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.MatKhau, new { @class = "control-label col-md-2", @style = "width:105px" })<span class="required">*</span>
                                    <div class="col-md-10" style="padding-left:29px; padding-right:29px">
                                       @Html.PasswordFor(model => model.MatKhau, htmlAttributes: new { @class = "form-control" })
                                    
                                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <p class="required" style="padding-left:20px">* Yêu cầu bắt buộc</p>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10" style="margin-left:20px">
                                        <input type="submit" value="Đăng nhập" class="btn btn-default" style="color:white; background-color:black"  />
                                    </div>
                                 
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </fieldset>
        </div>
        <br>
    </div>
</section>

<div class="col-md-4">
    <section id="socialLoginForm">
        @Html.Partial("_ExternalLoginsListPartial", new QLNhaHang.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
    </section>
</div>
