@model IEnumerable<QLNhaHang.Models.DatHang>

@{
    ViewBag.Title = "Đặt Hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh Sách khách hàng đặt hàng</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KhachHang.HoTen)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayDatHang)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayGiao)

        </th>

        <th>
            @Html.DisplayNameFor(model => model.GhiChu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TriGia)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.HoTen)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDatHang)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NgayGiao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TriGia)

            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.DatHangID }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.DatHangID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.DatHangID })
            </td>
        </tr>
    }

</table>
